#include<stdio.h>
 
int main()
{
    int btt[20],p[20],wt[20],tat[20],pr[20],i,j,n,total=0,pos,temp,avg_wt,avg_tat;
    printf("Enter Total Number of Process:");
    scanf("%d",&n);
 
    printf("\nEnter Burst Time and Priority\n");
    for(i=0;i<n;i++)
    {
        printf("\nP[%d]\n",i+1);
        printf("Burst Time:");
        scanf("%d",&btt[i]);
        printf("Priority:");
        scanf("%d",&pr[i]);
        p[i]=i+1;           
    }
 
    
    for(i=0;i<n;i++)
    {
        pos=i;
        for(j=i+1;j<n;j++)
        {
            if(pr[j]<pr[pos])
                pos=j;
        }
 
        temp=pr[i];
        pr[i]=pr[pos];
        pr[pos]=temp;
 
        temp=btt[i];
        btt[i]=btt[pos];
        btt[pos]=temp;
 
        temp=p[i];
        p[i]=p[pos];
        p[pos]=temp;
    }
 
    wt[0]=0;	
 
    
    for(i=1;i<n;i++)
    {
        wt[i]=0;
        for(j=0;j<i;j++)
            wt[i]+=btt[j];
 
        total+=wt[i];
    }
 
    avg_wt=total/n;      //average waiting time
    total=0;
 
    printf("\nProcess\t    Burst Time    \tWaiting Time\tTurnaround Time");
    for(i=0;i<n;i++)
    {
        tat[i]=btt[i]+wt[i];     //calculate turnaround time
        total+=tat[i];
        printf("\nP[%d]\t\t  %d\t\t    %d\t\t\t%d",p[i],btt[i],wt[i],tat[i]);
    }
 
    avg_tat=total/n;     //average turnaround time
    printf("\n\nAverage Waiting Time=%d",avg_wt);
    printf("\nAverage Turnaround Time=%d\n",avg_tat);
 
	int c,time,remain,flag=0,timeslice; 
  int wait_time=0,turnaround_time=0,at[10],bt[10],rt[10]; 
  printf("Enter Total Process:\t "); 
  scanf("%d",&n); 
  remain=n; 
  for(c=0;c<n;c++) 
  { 
    printf("Enter Arrival Time and Burst Time for Process Process Number %d :",c+1); 
    scanf("%d",&at[c]); 
    scanf("%d",&bt[c]); 
    rt[c]=bt[c]; 
  } 
  printf("Enter Time Slice:\t"); 
  scanf("%d",&timeslice); 
  printf("\n\nProcess\t|Turnaround Time|Waiting Time\n\n"); 
  for(time=0,c=0;remain!=0;) 
  { 
    if(rt[c]<=timeslice && rt[c]>0) 
    { 
      time+=rt[c]; 
      rt[c=0]; 
      flag=1; 
    } 
    else if(rt[c]>0) 
    { 
      rt[c]-=timeslice; 
      time+=timeslice; 
    } 
    if(rt[c]==0 && flag==1) 
    { 
      remain--; 
      printf("P[%d]\t|\t%d\t|\t%d\n",c+1,time-at[c],time-at[c]-bt[c]); 
      wait_time+=time-at[c]-bt[c]; 
      turnaround_time+=time-at[c]; 
      flag=0; 
    } 
    if(c==n-1) 
      c=0; 
    else if(at[c+1]<=time) 
      c++; 
    else 
      c=0; 
  } 
  printf("\nAverage Waiting Time= %f\n",wait_time*1.0/n); 
  printf("Avg Turnaround Time = %f",turnaround_time*1.0/n); 
  
  return 0; 
}
